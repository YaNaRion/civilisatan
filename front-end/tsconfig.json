{
  "name": "Cavilisation-front-end",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js"
  },
  "author": "YaNaRion",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  },
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "outDir": "site/dist",
    "rootDir": "site/src"
  },
  "include": [
    "site/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

